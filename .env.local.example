# minimax-refactor-bot local environment template
# Copy to .env.local and fill values:
# cp .env.local.example .env.local
# set -a; source .env.local; set +a

OPENROUTER_API_KEY=your_openrouter_api_key
GITHUB_TOKEN=your_github_token
GITHUB_REPOSITORY=owner/repository
GITHUB_REF_NAME=main

MODEL_NAME=minimax/minimax-m2.5
MAX_DIFF_SIZE=80000
MAX_FILES_PER_CHUNK=1
TIMEOUT_MS=30000
MAX_RETRIES=1
PATCH_REPAIR_ATTEMPTS=2
# Empty/unset uses default exclusions. Set to "none" to disable exclusions entirely.
# Supports JSON array, newline list, or comma list (escape literal commas as \,).
# For GitHub Actions repository variables, prefer JSON array format.
FILE_EXCLUDE_PATTERNS=(^|/)package-lock\\.json$,(^|/)npm-shrinkwrap\\.json$,(^|/)pnpm-lock\\.ya?ml$,(^|/)yarn\\.lock$,(^|/)bun\\.lockb$,(^|/)(dist|build|coverage|node_modules)/,\\.(png|jpe?g|gif|webp|ico|pdf|zip|gz|mp3|mp4|mov|woff2?|ttf|eot|otf|map)$
BEHAVIOR_GUARD_MODE=strict
TEST_COMMAND=npm test
WATCH_POLL_INTERVAL_MS=30000
