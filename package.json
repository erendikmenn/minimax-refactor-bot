{
  "name": "minimax-refactor-bot",
  "version": "0.1.0",
  "description": "Automated MiniMax refactor and optimization bot for GitHub repositories.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "minimax-refactor-bot": "dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "run": "node dist/index.js run",
    "watch": "node dist/index.js watch",
    "dev": "tsx src/index.ts run",
    "dev:watch": "tsx src/index.ts watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "github-actions",
    "openrouter",
    "minimax",
    "refactor",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist",
    ".github/workflows/refactor.yml",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^22.13.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  }
}
